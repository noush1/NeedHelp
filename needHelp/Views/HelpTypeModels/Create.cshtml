@model needHelp.Models.HelpTypeModels

@{
    ViewBag.Title = "יצירת סוג התנדבות";
}
<style type="text/css">
    a.nounderline {
        text-decoration: none;
    }

    span.hovercolor {
        font-size: 20px;
        cursor: pointer;
        color: #cc3300;
    }
</style>
<div dir="rtl">
    @if (User.IsInRole(roleType.admin.ToString()))
    {
        <h2>יצירת סוגי עזרה</h2>

        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div dir="rtl" class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("סוג התנדבות", "סוג התנדבות", new { style = "width:50px; height:30px; display:inline-block;" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.typeName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.typeName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("נתיב לתמונה", "נתיב לתמונה", new { style = "width:50px; height:30px; display:inline-block;" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.imagePath, new { htmlAttributes = new { @type = "file" } })
                        @Html.ValidationMessageFor(model => model.imagePath, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="צור" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <br /><br />
        <p><h3>אין ברשותך הרשאות מתאימות לצפייה בעמוד זה</h3></p>
    }
    <div>
        <a class="nounderline" href="@Url.Action("Index", "HelpTypeModels")"><span class="hovercolor">חזרה</span></a>
    </div>
</div>