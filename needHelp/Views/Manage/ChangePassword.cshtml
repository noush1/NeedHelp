@model needHelp.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "שינוי סיסמה";
}
<div dir="rtl">
    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>טופס שינוי סיסמה</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("סיסמה נוכחית", "סיסמה נוכחית", new { style = "width:100px; height:30px; display:inline-block; " })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("סיסמה חדשה", "סיסמה חדשה", new { style = "width:100px; height:30px; display:inline-block; " })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("אמת סיסמה", "אמת סיסמה", new { style = "width:100px; height:30px; display:inline-block; " })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="שנה סיסמה" class="btn btn-default" />
            </div>
        </div>
    }
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
