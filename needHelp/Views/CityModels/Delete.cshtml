@model needHelp.Models.CityModels

@{
    ViewBag.Title = "מחיקת עיר";
}

<div dir="rtl">
    @if (User.IsInRole(roleType.admin.ToString()))
    {
        <h2>מחיקת עיר</h2>

        <h3>האם הינך בטוח כי ברצונך למחוק עיר זו?</h3>
            <hr />
        @Html.Label("עיר:", "עיר:", new { style = "width:50px; height:30px; display:inline-block; " })
        @Html.DisplayFor(model => model.name)

            using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                </div>
            }
    }
    else
    {
        <br /><br />
        <p><h3>אין ברשותך הרשאות מתאימות לצפייה בעמוד זה</h3></p>
    }
    <div>
        @Html.ActionLink("חזרה", "Index")
    </div>
</div>
