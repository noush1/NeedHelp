@model needHelp.Models.CityModels

@{
    ViewBag.Title = "עריכת עיר";
}

<div dir="rtl">
    @if (User.IsInRole(roleType.admin.ToString()))
    {
        <h2>עריכת עיר</h2>

        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div dir="rtl" class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)
                @Html.Label("עיר:", "עיר:", new { style = "width:50px; height:30px; display:inline-block;" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control"} })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
            </div>
        }
    }
    else
    {
        <br /><br />
        <p><h3>אין ברשותך הרשאות מתאימות לצפייה בעמוד זה</h3></p>
    }
    <div>
        @Html.ActionLink("חזרה", "Index")
    </div>
</div>